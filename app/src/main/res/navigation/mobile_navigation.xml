<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_main">

    <fragment
        android:id="@+id/nav_main"
        android:name="com.byfrunze.amazingwallpaper.presentation.screens.main.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_setupFragment"
            app:destination="@id/nav_setup"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/fragment_open_exit" />
        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/nav_search"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/nav_setup"
        android:name="com.byfrunze.amazingwallpaper.presentation.screens.setup.SetupFragment"
        android:label="Установка"
        tools:layout="@layout/fragment_setup">
        <argument
            android:name="uri"
            app:argType="string" />
        <action
            android:id="@+id/action_setupFragment_to_mainFragment"
            app:destination="@id/nav_main"
            app:popUpTo="@id/nav_main" />
    </fragment>
    <fragment
        android:id="@+id/nav_search"
        android:name="com.byfrunze.amazingwallpaper.presentation.screens.search.SearchFragment"
        android:label="Поиск"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_setupFragment"
            app:destination="@id/nav_setup" />
    </fragment>

</navigation>